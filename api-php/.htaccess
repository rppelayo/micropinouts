RewriteEngine On

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Route API requests to index.php (but allow direct file access)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/micropinouts/api-php/(setup|test|db-test|debug|test-fritzing-parser|test-zip)\.php$
RewriteCond %{REQUEST_URI} !^/micropinouts/api-php/upload-test\.html$
RewriteCond %{REQUEST_URI} !^/micropinouts/api-php/test-upload-response\.php$
RewriteCond %{REQUEST_URI} !^/micropinouts/api-php/debug-fzp\.php$
RewriteRule ^(.*)$ index.php [QSA,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Set proper MIME types
AddType application/json .json

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

# Allow setup.php and test.php for development (remove in production)
<Files "setup.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "test.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "db-test.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "debug.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "admin-test.html">
    Order Allow,Deny
    Allow from all
</Files>

<Files "test-fritzing-parser.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "test-zip.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "upload-test.html">
    Order Allow,Deny
    Allow from all
</Files>

<Files "test-upload-response.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "debug-fzp.php">
    Order Allow,Deny
    Allow from all
</Files>